  <div class="container">
  <div class="row">
<table class ="table">
  <thead>
    <tr>
      <th>宿泊施設名</th>
      <th>予約日</th>
      <th>部屋名</th>
      <th>部屋詳細</th>
      <th>金額</th>
      <th>部屋画像</th>
      <th>タグ</th>
    </tr>
  </thead>
  <tbody>
   <tr>
   <td><%= @room.hotel.hotel_name %></td>
   <td><%= @room.booking_date %></td>
   <td><%= @room.room_name %></td>
   <td><%= @room.room_details %></td>
   <td>&yen; <%= @room.price.to_s(:delimited) %></td>
   <td><% if @room.image.attached? %>
    <%= image_tag @room.image, size: "200x200" %>
  <% else %>
    <%= image_tag 'no_image.jpg', size: "200x200" %>
  <% end %>
   </td>
   <td>
     <% @room.tags.each do |tag| %>
       <span class="badge badge-secondary mr-2"><%= tag.name %></span>
     <% end %>
   </td>

   <td><%= link_to "編集", edit_admin_booking_path(@room.id),class: "btn btn-outline-secondary" %></td>
   <td><%= link_to "削除", admin_booking_path(@room.id),class: "btn btn-outline-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
  </tr>
  </tbody>
</table>
    </div>
  </div>
</div>
</div>