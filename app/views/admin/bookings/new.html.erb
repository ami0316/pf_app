<h1>予約入力画面</h1>

<!--エラー表示部分-->
<% if @room.errors.any? %>
  <%= @room.errors.count %>件のエラーが発生しました
  <ul>
    <% @room.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<!-- 投稿部分 -->
<%= form_with model: @room, url: admin_bookings_path do |f| %>
  <h4>ホテル名</h4>
  <%= f.collection_select :hotel_id, Hotel.all, :id, :hotel_name, include_blank: "選択して下さい" %>

  <h4>予約日</h4>
  <%= f.text_field :booking_date %>

  <h4>部屋名</h4>
  <%= f.text_field :room_name %>

  <h4>部屋詳細</h4>
  <%= f.text_field :room_details %>

   <h4>金額</h4>
  <%= f.text_field :price %>

  <h4>画像</h4>
  <%= f.file_field :image, accept: "image/*" %>

  <%= f.submit '投稿', class: "btn btn-success" %>
<% end %>