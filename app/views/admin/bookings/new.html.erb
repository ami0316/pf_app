  <div class="row">
    <div class="col-sm-10 offset-sm-5 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
<h1>予約入力画面</h1>

<!--エラー表示部分-->
<% if @room.errors.any? %>
  <%= @room.errors.count %>件のエラーが発生しました
  <ul>
    <% @room.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<!-- 投稿部分 -->
<%= form_with model: @room, url: admin_bookings_path do |f| %>
  <h4>ホテル名</h4>
  <%= f.collection_select :hotel_id, Hotel.all, :id, :hotel_name, {include_blank: "選択して下さい"}, class: 'form-control' %>

  <h4>予約日</h4>
  <%= f.date_field :booking_date, class: "form-control" %>

  <h4>部屋名</h4>
  <%= f.text_field :room_name, class: "form-control" %>

  <h4>部屋詳細</h4>
  <%= f.text_field :room_details, class: "form-control" %>

   <h4>金額</h4>
  <%= f.text_field :price, class: "form-control" %>

  <h4>画像</h4>
  <%= f.file_field :image, accept: "image/*" %>

  <%= @tags %>

  <%= f.submit '投稿', class: "btn btn-success btn-lg btn-block" %>
<% end %>
    </div>
  </div>
</div>