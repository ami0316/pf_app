  <div class="row">
      <h1>登録したホテル一覧</h1>

<table class ="table">
  <thead>
    <tr>
      <th>宿泊施設名</th>
      <th>部屋詳細</th>
      <th>金額</th>
      <th>画像</th>
    </tr>
  </thead>
  <tbody>
     <% @rooms.each do |room| %>
     <tr>
        <td><%= room.hotel.hotel_name %></td>
        <td><%= room.room_details %></td>
        <td>&yen; <%= room.price.to_s(:delimited) %></td>
        <td><% if room.image.attached? %>
          <%= image_tag room.image, size: "100x100" %>
        <% else %>
          <%= image_tag 'no_image', size: "100x100" %></td>
        <% end %>
      <span>
        <td><%= link_to '詳細', admin_booking_path(room.id), class: "btn btn-outline-secondary" %></td>
      </span>
       </tr>
        <% end %>
  </tbody>
</table>
    </div>
  </div>
</div>