<div class="container">
  <div class="row">
    <div class="col-sm-10 offset-sm-2 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
<!--エラー表示部分-->
<% if @room.errors.any? %>
  <%= @room.errors.count %>件のエラーが発生しました
  <ul>
    <% @room.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @room, url: admin_booking_path(@room.id), method: :patch do |f| %>
  <h4>ホテル名</h4>
  <%= f.collection_select :hotel_id, Hotel.all, :id, :hotel_name, include_blank: "選択して下さい" %>

  <h4>部屋名</h4>
  <%= f.text_field :room_name, class: "form-control" %>

  <h4>部屋詳細</h4>
  <%= f.text_field :room_details, class: "form-control" %>

   <h4>金額</h4>
  <%= f.text_field :price, class: "form-control" %>

  <%= f.submit '更新',class: "btn btn-outline-secondary btn-lg btn-block mt-2" %>
<% end %>
    </div>
  </div>
</div>
