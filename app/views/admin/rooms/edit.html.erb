<div class ='row'>
   <div class="col-sm-10 offset-sm-5 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
<h1>部屋詳細編集画面</h1>

<%= form_with model: @room, url: admin_room_path do |f| %>
  <h4>ホテル名</h4>
  <%= f.collection_select :hotel_id, Hotel.all, :id, :hotel_name, {include_blank: "選択して下さい"}, class: 'form-control' %>

  <h4>予約日</h4>
  <%= f.date_field :booking_date, class: "form-control" %>

  <h4>部屋名</h4>
  <%= f.text_field :room_name, class: "form-control" %>

  <h4>部屋内容</h4>
  <%= f.text_field :room_details, class: "form-control" %>

  <h4>部屋料金</h4>
  <%= f.text_field :price, class: "form-control" %>

  <h4>部屋画像</h4>
  <%= f.file_field :image, accept: "image/*" %>


  <h4>タグ</h4>
  <%= f.text_field :tag, class: "form-control", value: @tags %>



  <%= f.submit '登録', class: "btn btn-success btn-lg btn-block" %>
  <% end %>

   </div>
</div>