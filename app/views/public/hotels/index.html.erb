<%= render 'public/searches/search' %>
<h1>予約可能なホテル一覧</h1>

<% @rooms.each do |room| %>
  <p>ホテル名</p>
  <%= room.hotel.hotel_name %>
  <p>部屋名</p>
  <%= room.room_name %>
  <p>部屋詳細</p>
  <%= room.room_details %>
  <p>金額</p>
  <%= room.price %>
  <p>画像</p>
  <% if room.image.attached? %>
    <%= image_tag room.image, size: "100x100" %>
  <% else %>
    <%= image_tag 'no_image', size: "100x100" %>
  <% end %>
  <span>
  <%= link_to "予約する", class: "btn btn-success" %>
  </span>
  <% end %>

