<div class="container">
  <div class="row">
    <div class="col-sm-10 offset-sm-5 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
<p>検索結果</p>
<% if @hotels.present? %>
  <table class="table table-hover table-inverse">

      <tbody>
        <% @hotels.each do |hotel| %>
          <tr>
            <p>ホテル名：<%= link_to hotel.hotel_name, hotels_path(hotel_id: hotel.id) %></p>
             <% hotel.rooms.is_view.each do |room| %>
              <p>部屋名：<span><%= room.room_name %></span></p>
              <p>部屋詳細：<span><%= link_to room.room_details, hotel_path(room) %> </span></p>
              <p>金額：<span><%= room.price %></span></p>
              <p>お部屋のイメージ</p>
              <% if room.image.attached? %>
                <%= image_tag room.image, size: "200x200" %>
              <% else %>
                <%= image_tag 'no_image', size: "200x200" %>
              <% end %>
            <% end %>
          </tr>
        <% end %>
      </tbody>

  </table>
<% end %>
<% if @rooms.present? %>
  <table class="table table-hover table-inverse">

      <tbody>
        <% @rooms.each do |room| %>
          <tr>
            <p>ホテル名：<%= link_to room.hotel.hotel_name, hotels_path(hotel_id: room.hotel) %></p>
            <p>部屋名：<span><%= room.room_name %></span></p>
            <p>部屋詳細：<span><%= room.room_details %></span></p>
            <p>金額：<span><%= room.price %></span></p>
            <p>お部屋のイメージ</p>
            <% if room.image.attached? %>
              <%= image_tag room.image, size: "200x200" %>
            <% else %>
              <%= image_tag 'no_image', size: "200x200" %>
            <% end %>
          </tr>
        <% end %>
      </tbody>

  </table>
<% end %>
    </div>
  </div>
</div>

<script>
  // ブラウザバック直前の遷移元のurlを取得
  $(document).on('turbolinks:load', function(){
    sessionStorage.setItem('url', window.location.href);
  })
</script>