<div class="row">
  <div class="col-sm-10 offset-sm-5 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
    <h2>新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="mb-2">
        <%= f.label :first_name, "名前（性）" %>
        <%= f.text_field :first_name, class: "form-control" %>
      </div>

      <div class="mb-2">
        <%= f.label :last_name, "名前（名）" %>
        <%= f.text_field :last_name, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :first_name_kana, "フリガナ（セイ）" %>
        <%= f.text_field :first_name_kana, class: "form-control" %>
      </div>

      <div class="field">
      <%= f.label :last_name_kana, "フリガナ（メイ）" %>
      <%= f.text_field :last_name_kana, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password",class: "form-control" %>
      </div>

      <div class="mb-2">
        <%= f.label :"パスワード（確認用）" %><br>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="mb-2">
        <%= f.submit "新規登録", class: "btn btn-outline-secondary btn-lg btn-block" %>
      </div>
    <% end %>

    <%= render "public/shared/links" %>
  </div>
</div>